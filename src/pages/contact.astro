---
import Container from '@/components/Container.astro'
import Layout from '../layouts/Layout.astro'
import Contact from '@/sections/Contact.astro'
import { Schema } from 'astro-seo-schema'
import { Seo } from 'astro-seo-meta'
export const prerender = true
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---

<Layout title="Contact - Raqueebuddin Aziz">
	<Fragment slot="head">
		<Schema
			item={{
				'@context': 'https://schema.org',
				'@type': 'Person',
				name: 'Raqueebuddin Aziz',
				knowsAbout: [
					'Computer Science',
					'Web Programming',
					'Web Development',
					'Web Design',
					'Freelancing'
				],
				image: Astro.site + 'assets/images/profile.webp',
				url: canonicalURL.toString(),
				email: 'raqueebuddin.aziz.314@gmail.com',
				gender: 'https://schema.org/Male',
				knowsLanguage: ['English', 'Hindi']
			}}
		/>
		<Seo
			title="Contact - Raqueeb.com"
			description="I help solar energy companies save money by building automation tools"
			keywords={[
				'professional web developer',
				'web developer',
				'web designer',
				'mvps',
				'tech startups'
			]}
			icon="/favicon.ico"
			themeColor="#ea580c"
			colorScheme="light"
			facebook={{
				image: Astro.site + '/assets/images/profile.webp',
				url: canonicalURL.toString(),
				type: 'website'
			}}
			twitter={{
				image: Astro.site + '/assets/images/profile.webp',
				site: '@RaqueebuddinA',
				card: 'summary'
			}}
		/>
		<!-- <meta property="og:image:width" content="1024" /> -->
		<!-- <meta property="og:image:height" content="1024" /> -->
	</Fragment>
	<Container class="bg-transparent p-5 md:p-10">
		<main class="flex flex-col gap-20">
			<Contact />
		</main>
	</Container>
</Layout>
