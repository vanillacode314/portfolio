---
import clsx from 'clsx';
export interface Props {
  path: string,
  class?: string
}
const props = Astro.props as Props
---

<video autoplay loop muted playsinline class={clsx("rounded-xl mx-auto max-w-full border-2", props.class)}>
  <source src={`/assets/videos/${props.path}.webm`} type="video/webm">
  <source src={`/assets/videos/${props.path}.mp4`} type="video/mp4">
</video>
