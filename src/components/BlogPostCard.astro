---
export interface Props {
	slug: string
	title: string
	description: string
	created: string
	updated: string | undefined
	author: {
		name: string
	}
}
const { slug, title, author, description, created, updated } = Astro.props as Props
---

<a href={`/blog/${slug}`} class="contents">
	<article
		class="flex flex-col bg-gray-100 rounded-10 text-gray-900 shadow-lg overflow-hidden hover:scale-105 transition-transform"
	>
		<img
			src={`/assets/images/blog/${slug}.svg`}
			alt={title}
			class="w-full object-cover aspect-square"
			width="1024"
			height="1024"
		/>
		<div class="grow p-10 flex flex-col gap-3">
			<h3 class="text-2xl font-black">{title}</h3>
			<p class="text-xs uppercase tracking-wider font-medium text-gray-700">
				{author.name}
			</p>
			<p class="text-xs uppercase tracking-wider font-medium text-gray-700">
				<span class="font-semibold">
					{
						new Date(created).toLocaleDateString(undefined, {
							year: 'numeric',
							month: 'short',
							day: 'numeric'
						})
					}
					{
						updated && (
							<span class="font-semibold inline-block">
								(Updated:{' '}
								{new Date(updated).toLocaleDateString(undefined, {
									year: 'numeric',
									month: 'short',
									day: 'numeric'
								})}
								)
							</span>
						)
					}
				</span>
			</p>
			<p class="mt-3">{description}</p>
			<span class="grow"></span>
			<div class="flex flex-wrap gap-5">
				<span class="i-ic-sharp-menu-book text-xl"></span>
				<span>Read</span>
			</div>
		</div>
	</article>
</a>
